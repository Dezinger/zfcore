<ul class="commentlist">
    <li class="comment">
        <?php $user = $this->user();?>
        <?php if ($user->avatar):?>
            <img src="<?php echo $this->baseUrl($user->avatar)?>" title="<?php echo $this->__('Avatar for')?> <?php echo $user->login?>" class="avatar"/>
